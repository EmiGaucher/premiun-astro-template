---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Navbar from "@/components/Navbar.astro";
import Hero from "@/components/Hero.astro";
import TechStack from "@/components/TechStack.astro";
import Features from "@/components/Features.astro";
import Pricing from "@/components/Pricing.astro";
import TestimonialSlider from "@/components/TestimonialSlider";
import FAQ from "@/components/FAQ.astro";
import Footer from "@/components/Footer.astro";
import Button from "@/components/Button.astro";
import { siteConfig } from "@/config/site";
---

<BaseLayout>
  <Navbar />
  
  <main>
    <Hero />
    
    <TechStack />
    
    <Features />

    
    <section class="section-padding overflow-hidden">
      <div class="container-custom">
        <div class="text-center mb-16 px-4">
          <h2 class="text-3xl md:text-5xl font-bold mb-4">Loved by developers worldwide</h2>
          <p class="text-lg text-muted-foreground">Don't just take our word for it.</p>
        </div>
        <TestimonialSlider client:load />
      </div>
    </section>
    
    <Pricing />
    
    <FAQ />
    
    <!-- CTA Section -->
    <section class="section-padding">
      <div class="container-custom">
        <div class="relative overflow-hidden bg-primary rounded-3xl p-12 md:p-24 text-center text-primary-foreground shadow-2xl">
          <div class="absolute top-0 left-0 w-full h-full -z-10 opacity-10">
            <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-white rounded-full blur-[120px]"></div>
            <div class="absolute bottom-0 left-0 w-1/3 h-1/3 bg-white rounded-full blur-[100px]"></div>
          </div>
          
          <h2 class="text-3xl md:text-5xl font-extrabold mb-6">Ready to scale your business?</h2>
          <p class="text-lg md:text-xl text-primary-foreground/80 max-w-2xl mx-auto mb-10">
            Join 2,000+ companies building high-performance websites with {siteConfig.name}. Get lifetime access today for a one-time payment.
          </p>


          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <Button size="lg" variant="secondary" class="bg-white text-primary hover:bg-white/90 w-full sm:w-auto">Buy Template Now</Button>
            <Button size="lg" variant="outline" class="border-white text-white hover:bg-white/10 w-full sm:w-auto">Schedule a Demo</Button>
          </div>
        </div>
      </div>
    </section>

  </main>
  
  <Footer />
</BaseLayout>
