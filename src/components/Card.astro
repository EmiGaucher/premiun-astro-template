---
interface Props {
  class?: string;
  padding?: "none" | "sm" | "md" | "lg";
}

const { class: className, padding = "md" } = Astro.props;

const paddings = {
  none: "",
  sm: "p-4",
  md: "p-6",
  lg: "p-8",
};

const styles = `bg-card border border-border rounded-2xl overflow-hidden shadow-sm transition-all duration-300 ${paddings[padding]} ${className || ""}`;
---

<div class={styles}>
  <slot />
</div>
