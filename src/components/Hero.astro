---
import { siteConfig } from "@/config/site";
import Button from "./Button.astro";
---

<section class="relative overflow-hidden section-padding">
  <!-- Background Decoration -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full -z-10 pointer-events-none opacity-50 dark:opacity-20">
    <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-primary/30 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-[10%] right-[-10%] w-[30%] h-[30%] bg-blue-500/20 rounded-full blur-[100px]"></div>
  </div>

  <div class="container-custom text-center">
    <div class="inline-flex items-center rounded-full border border-primary/20 bg-primary/5 px-4 py-1.5 text-sm font-medium text-primary mb-8 animate-in fade-in slide-in-from-bottom-2 duration-700">
      <span class="mr-2">ðŸš€</span> The ultimate template for your next big idea
    </div>
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-extrabold tracking-tight mb-6 animate-in fade-in slide-in-from-bottom-4 duration-700 delay-100">
      Ship your SaaS <br />
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-blue-600">
        In record time
      </span>
    </h1>
    <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto mb-10 animate-in fade-in slide-in-from-bottom-6 duration-700 delay-200">
      Everything you need to build, launch and scale. A professional template designed for developers who value speed and clean design.
    </p>


    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-in fade-in slide-in-from-bottom-8 duration-700 delay-300">
      <Button size="lg" class="w-full sm:w-auto shadow-lg shadow-primary/25">Start Building Now</Button>
      <Button variant="outline" size="lg" class="w-full sm:w-auto glass">View Components</Button>
    </div>

    <!-- Trust Badges -->
    <div class="mt-12 flex flex-wrap items-center justify-center gap-x-8 gap-y-4 text-sm text-muted-foreground animate-in fade-in duration-1000 delay-500">
        <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20"><path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"></path></svg>
            99+ Lighthouse Score
        </div>
        <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20"><path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"></path></svg>
            Production Ready
        </div>
        <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20"><path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"></path></svg>
            Easy Customization
        </div>
    </div>
    
    <!-- Hero Image / Mockup Upgrade -->
    <div class="mt-16 md:mt-24 relative max-w-5xl mx-auto group perspective-1000">
      <div class="absolute -inset-1 bg-gradient-to-r from-primary via-blue-500 to-purple-600 rounded-2xl blur-xl opacity-20 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>
      <div class="relative bg-card rounded-xl border border-border/50 shadow-2xl overflow-hidden aspect-video flex flex-col transition-transform duration-700 group-hover:scale-[1.01]">
         <!-- Mockup Top Bar -->
         <div class="h-10 bg-muted/50 border-b border-border flex items-center px-4 gap-2">
            <div class="flex gap-1.5">
                <div class="w-3 h-3 rounded-full bg-red-500/50"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500/50"></div>
                <div class="w-3 h-3 rounded-full bg-green-500/50"></div>
            </div>
            <div class="mx-auto bg-background/50 rounded px-3 py-0.5 text-[10px] text-muted-foreground w-64 text-center border border-border">
                yourapp.com/dashboard
            </div>
         </div>
         <!-- Mockup Content -->
         <div class="flex-1 grid grid-cols-[200px_1fr] h-full">
            <div class="border-r border-border/50 p-4 space-y-4 bg-muted/20">
                <div class="h-4 bg-primary/20 rounded w-3/4"></div>
                <div class="space-y-2">
                    <div class="h-3 bg-muted rounded w-full"></div>
                    <div class="h-3 bg-muted rounded w-5/6"></div>
                    <div class="h-3 bg-muted rounded w-2/3"></div>
                </div>
            </div>
            <div class="p-8 space-y-8">
                <div class="flex justify-between items-center">
                    <div class="h-8 bg-muted rounded w-32"></div>
                    <div class="h-10 w-10 bg-primary/10 rounded-full"></div>
                </div>
                <div class="grid grid-cols-3 gap-4">
                    <div class="h-24 bg-card border border-border rounded-xl"></div>
                    <div class="h-24 bg-card border border-border rounded-xl"></div>
                    <div class="h-24 bg-card border border-border rounded-xl"></div>
                </div>
                <div class="h-32 bg-primary/5 border border-primary/20 rounded-xl relative overflow-hidden">
                    <div class="absolute inset-0 bg-gradient-to-r from-primary/10 to-transparent"></div>
                </div>
            </div>
         </div>
      </div>
    </div>
  </div>
</section>

