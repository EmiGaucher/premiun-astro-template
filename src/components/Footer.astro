---
import { siteConfig } from "@/config/site";

const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Product",
    links: [
      { label: "Features", href: "/#features" },
      { label: "Pricing", href: "/#pricing" },
      { label: "Changelog", href: "/changelog" },
    ],
  },
  {
    title: "Company",
    links: [
      { label: "About", href: "/about" },
      { label: "Blog", href: "/blog" },
      { label: "Contact", href: "/contact" },
    ],
  },
  {
    title: "Legal",
    links: [
      { label: "Privacy", href: "/privacy" },
      { label: "Terms", href: "/terms" },
    ],
  },
];
---

<footer class="border-t border-border bg-background">
  <div class="container-custom py-12 md:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 lg:gap-12">
      <div class="col-span-2 lg:col-span-2">
        <a href="/" class="flex items-center space-x-2">
          <span class="font-bold text-xl tracking-tight text-primary">{siteConfig.name}</span>
        </a>


        <p class="mt-4 text-sm text-muted-foreground max-w-xs">
          Empowering modern teams with beautiful, high-performance UI components for building the future of the web.
        </p>
        <div class="flex items-center gap-4 mt-6">
           <!-- Social Icons Placeholder -->
           <a href={siteConfig.links.twitter} class="text-muted-foreground hover:text-primary transition-colors">
             <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path></svg>
           </a>
           <a href={siteConfig.links.github} class="text-muted-foreground hover:text-primary transition-colors">
             <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
           </a>
        </div>
      </div>
      {footerLinks.map((section) => (
        <div class="col-span-1">
          <h4 class="text-sm font-semibold uppercase tracking-wider">{section.title}</h4>
          <ul class="mt-4 space-y-2">
            {section.links.map((link) => (
              <li>
                <a href={link.href} class="text-sm text-muted-foreground hover:text-primary transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    <div class="mt-12 pt-8 border-t border-border flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-xs text-muted-foreground">
        Â© {currentYear} {siteConfig.name}. All rights reserved.
      </p>
      <p class="text-xs text-muted-foreground">
        Template by {siteConfig.author}
      </p>

    </div>
  </div>
</footer>
